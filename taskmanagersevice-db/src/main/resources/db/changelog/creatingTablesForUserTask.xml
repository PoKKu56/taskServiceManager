<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <changeSet id="create tables for User Service 2" author="Rodion">
        <createTable tableName="user">
            <column name="id" type="uuid">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="varchar(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="varchar(255)"/>
            <column name="email" type="varchar(100)">
                <constraints unique="true" nullable="false"/>
            </column>
            <column name="role" type="varchar(10)">
                <constraints nullable="false" checkConstraint="role in ('ROLE_USER', 'ROLE_ADMIN')"/>
            </column>
            <column name="is_active" type="boolean" defaultValue="false">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamptz">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="user" indexName="index_for_username">
            <column name="username"/>
        </createIndex>

        <createTable tableName="temp_code">
            <column name="id" type="uuid">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="user_id" type="uuid">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="varchar(6)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="temp_code" baseColumnNames="user_id"
                                 constraintName="fk_user_id" referencedTableName="user"
                                 referencedColumnNames="id"/>

        <rollback>
            <dropTable tableName="user"/>
            <dropTable tableName="temp_code"/>
        </rollback>
    </changeSet>
</databaseChangeLog>